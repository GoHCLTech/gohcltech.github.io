{

    "production": false,

    "paths": {

        "tasks": "./_gulp-tasks/",

        "src": {

            "css": "/_assets/css",
            "css_include": [
                "./bower_components/hcl-bootstrap/dist/css/**.*",
                "./_assets/css/**.*"
            ],

            "fonts": [
                "./_assets/fonts/**.*",
                "./bower_components/hcl-bootstrap/dist/fonts/**.*"
            ],

            "jekyll": [
                "./*.html",
                "./*.md",
                "./_data/*",
                "./_includes/**/*.html",
                "./_includes/**/*.md",
                "./_layouts/**/*.html",
                "./_layouts/**/*.md",
                "./_plugins/*",
                "./_posts/**/*.html",
                "./_posts/**/*.md"
            ],

            "js": "./_assets/js",
            "js_include": [
                "./bower_components/jquery/dist/jquery.js",
                "./bower_components/hcl-bootstrap/dist/js/**.*",
                "./_assets/js/**.*"
            ],

            "img": "./_assets/img"

        },

        "dest": {
            "css": "./assets/css",
            "fonts": "./assets/fonts",
            "jekyll": "./_site",
            "js": "./assets/js",
            "img": "./assets/img"
        }

    },

    "plugins": {

        "autoprefixer": true,
        "sourcemaps": true,

        "options": {

            "autoprefixer": {
                "browsers": ["last 2 versions"],
                "cascade": false
            },

            "imagemin": {
                "prograssive": false,
                "svgoPlugins": [{
                    "removeViewBox": true
                }]
            },

            "minifier": {
                "advanced": true,
                "aggressiveMerging": true,
                "compatability": "",
                "keepBreaks": false,
                "keepSpecialComments": "*",
                "mediaMerging": true,
                "processImport": false
            },

            "uglify": {
                "compress": {
                    "drop_console": true
                }
            }

        }
    }
}
